{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
   // "baseUrl": "src/"
    "baseUrl": ".",
    // "types": [
    //   "webpack-env"
    // ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src",
    "./node_modules/**/*",
    "types",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"

  ],
  "exclude": [
    "node_modules"
  ]
}
